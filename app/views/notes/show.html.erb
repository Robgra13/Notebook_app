<div class="d-flex ms-5 ps-5 mb-3"><h2>Note:  </h2></div>
<div class="container"> 
    <div class="card my-4" style="width: 25rem">
        <div class="card-header">
            <%= @note.title  %>
        </div>
        <div class="card-body">
            <%= @note.content %>
        </div>
    </div class="mt-3">
     <%= link_to "Destroy this note", @note, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-outline-danger me-3" %>
     <%= link_to "Edit this note", edit_note_path, class:"btn btn-primary me-3" %>
    </div>

