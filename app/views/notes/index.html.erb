<div class="d-flex ms-5 ps-5 mb-3"><h2>Your Notes: </h2></div>
<div class="container">
    <div class="row justify-content-start align-content-center">
        <% @notes.each do |note| %>
            <div class="col-5">       
                <div class="card mx-3 my-2" style="width: 25rem">
                    <div class="card-header">
                       <%= link_to note.title, note, class:"text-decoration-none" %>
                    </div>
                    <div class="card-body">
                        <%= note.content %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

